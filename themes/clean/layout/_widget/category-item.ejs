<% if (category.name == page.category) { %>
    <a href="<%- url_for(category.path) %>" class="btn btn-info m-2">
        <%- category.name || "Untitled" %>
        <span class="badge badge-light"><%- category.length || 0 %></span>
    </a>
<% } else { %>
    <a href="<%- url_for(category.path) %>" class="btn btn-light m-2">
        <%- category.name || "Untitled" %>
    </a>
<% } %>