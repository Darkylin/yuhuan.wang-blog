<hr />

<!-- Footer -->
<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 text-center">
                <ul class="list-inline">
                    <% if (theme.footer.social_link.twitter_url) { %>
                        <li class="list-inline-item">
                            <a rel="external" href="<%- theme.footer.social_link.twitter_url%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>

                    <% if (theme.footer.social_link.facebook_url) { %>
                        <li class="list-inline-item">
                            <a rel="external" href="<%- theme.footer.social_link.facebook_url%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>

                    <% if (theme.footer.social_link.github_url) { %>
                        <li class="list-inline-item">
                            <a rel="external" href="<%- theme.footer.social_link.github_url%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>

                    <% if (theme.footer.social_link.linkedin_url) { %>
                        <li class="list-inline-item">
                            <a rel="external" href="<%- theme.footer.social_link.linkedin_url%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>

                    <% if (theme.footer.social_link.mailto) { %>
                        <li class="list-inline-item">
                            <a rel="external" href="mailto:<%- theme.footer.social_link.mailto%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="far fa-envelope fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>

                    <% if (theme.footer.social_link.gitlab_url) { %>
                        <li>
                            <a rel="external" href="<%- theme.footer.social_link.gitlab_url%>" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-gitlab fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    <% } %>
                </ul>
                <ul class="copyright footer-menu list-inline">
                    <% var item_count = 0 %>
                    <% for (var i in theme.footer.menu){ %>
                        <li class="list-inline-item">
                            <% if (item_count != 0) { %>
                                <span class="copyright-split">&nbsp;|&nbsp;</span>
                            <% } %>
                            <% item_count += 1 %>
                            <a href="<%- theme.footer.menu[i].url ? url_for(theme.footer.menu[i].url) : url_for(theme.footer.menu[i]) %>">
                                <% if (theme.footer.menu[i].icon) { %>
                                    <i class="<%= theme.footer.menu[i].icon %> fa-stack-2x"></i>
                                <% } else { %>
                                    <%= i %>
                                <% } %>
                            </a>
                        </li>
                    <% } %>
                </ul>
                <p class="copyright footer-author">
                    &copy; <%= theme.start_year %>-<%= date(new Date(), 'YYYY') %> 
                    <a rel="external" class="copyright-link" href="<%- theme.footer.author %>" target="_blank"><%= config.author || config.title %></a><br/>
                    Powered by <a rel="external" class="copyright-link" href="https://hexo.io/" target="_blank">Hexo</a>  
                    <span class="copyright-split">&nbsp;|&nbsp;&nbsp;</span>
                    Theme <a rel="external" class="copyright-link" href="https://github.com/luswdev/hexo-theme-clean.git" target="_blank">Clean</a>
                    <% if (theme.busuanzi && theme.busuanzi.site_views) { %>
                        <br/>
                        <span id="busuanzi_container_site_pv">
                            <i class="fas fa-eye"></i>&nbsp;&nbsp;<span id="busuanzi_value_site_pv"></span>&nbsp;
                        </span>
                    <% } %>
                    <% if (theme.busuanzi && theme.busuanzi.site_visitors) { %>
                        <span id="busuanzi_container_site_uv">
                            <span class="copyright-split">&nbsp;|&nbsp;</span>
                            <i class="fas fa-user-friends"></i>&nbsp;&nbsp;<span id="busuanzi_value_site_uv"></span>&nbsp;
                        </span>
                    <% } %>
                </p>
            </div>
        </div>
    </div>
</footer>
