/*
 * search.styl
 */

.search-btn {
    &:focus {
        outline: none;
    }

    i {
        color: #fff;
    }
}

#searchModal {

    .modal-header { 
        padding: .5rem 1rem;

        input {
            border: 0;

            &:focus {
                outline: 0;
                box-shadow: none;
            }
        }

        ::placeholder { 
            color: #BDBDBD;
            opacity: 1; 
        }

        :-ms-input-placeholder { 
            color: #BDBDBD;
        }

        ::-ms-input-placeholder { 
            color: #BDBDBD;
        }

        .close {
            padding: 0 1rem;
            align-self: center;
        }
    }

    .search-empty {
        i {
            font-size: 4rem;
            color: rgba(0,0,0,.4);
        }
    }

    .search-result-list {
        padding-left: 2px

        li {
            border-bottom: 1px solid #e5e5e5;
        
            &:last-child {
                border-bottom: 0;
            }

            a.search-result-title {
                sans-serif();
                text-decoration: none;
                font-size: 1.4rem;
                font-weight: 800;
            }

            p.search-result {
                word-break: break-all;

                .search-keyword {
                    padding: 1px 5px 1px 4px;
                    background-color: #f2f2f2;
                    color: #e96900;
                    font-style: normal;
                    white-space: pre-wrap;
                }
            }
        }
    }
}
