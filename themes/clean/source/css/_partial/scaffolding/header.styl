/*
 * header.styl
 */

.intro-header {
    background-cover();
    background-color: gray;
    background-position: center center;
    background-attachment: scroll;
    margin-bottom: 50px;
    position: relative;

    &:before {
        content: ' ';
        position: absolute;
        display: block;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(33, 33, 33, .15);
    }

    .site-heading, .post-heading {
        padding: 150px 0;
    }

    .site-heading {
        h1 {
            margin-top: 0;
            font-size: 80px;
        }
        .subheading {
            sans-serif();
            font-weight: 300;
            font-size: 24px;
            line-height: 1.1;
            margin: 10px 0 0;
        }
    }

    .post-heading {
        h1 {
            font-size: 55px;
            
            .subheading {
                line-height: 1.1;
            }
        }

        .subheading {
            sans-serif();
            font-weight: 600;
            font-size: 30px;
            margin: 10px 0 30px;
        }
    }
}
